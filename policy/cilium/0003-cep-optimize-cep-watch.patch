+++ b/pkg/endpointmanager/endpointsynchronizer.go
@@ -16,6 +16,8 @@ import (
 	meta_v1 "k8s.io/apimachinery/pkg/apis/meta/v1"
 	k8stypes "k8s.io/apimachinery/pkg/types"
 
+	nodeTypes "github.com/cilium/cilium/pkg/node/types"
